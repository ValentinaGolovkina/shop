<% layout('./layout/page') -%>
<% block('title', 'Valensiya - Детская одежда'); %>
<div class="product">
    <div class="container-fluid text-center">
        <div class="row ">
            <div class="col2 col-xs-4 col-sm-3 col-md-2">
                <h3>Детская одежда</h3>
                <div class="btn-group btn-group-vertical">
                    <a href="children"> <button class="btn categors" >Все</button> </a>
                    <a href="children?category=Платья"> <button class="btn categors">Платья</button> </a>
                    <a href="children?category=Рубашки"> <button class="btn categors">Рубашки</button> </a>
                    <a href="children?category=Брюки"> <button class="btn categors">Брюки</button> </a>
                    <a href="children?category=Юбки"> <button class="btn categors">Юбки</button> </a>
                    <a href="children?category=Толстовки"> <button class="btn categors">Толстовки</button> </a>
                    <a href="children?category=Футболки"> <button class="btn categors">Футболки</button> </a>
                    <a href="children?category=Майки"> <button class="btn categors">Майки</button> </a>
                </div>
            </div>
            <div class="col-xs-8 col-sm-9 col-md-10 panel-default">
                <ul class="thumbnails list-unstyled">
                    <% if (count==0) {%>
                    <h4>Товаров не найдено</h4>
                    <%} else while (count>0) {%>
                    <%-partial('./partials/rowMiniature',{goods:goods, count:count})%>
                    <% count = count-4; }%>
                </ul>
            </div>
        </div>
    </div>
</div>